<% if @orders.any? %>
  <div class="d-flex justify-content-between align-items-center">
    <h1>Orders</h1>

    <%= button_to 'Export', exports_path, class: 'btn btn-sm btn-outline-secondary' %>
  </div>

  <hr>

  <%= render 'orders/tabs' %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th class="text-end">Total</th>
        <th class="text-center">Items</th>
        <th class="text-center">Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'orders/order', collection: @orders %>
    </tbody>
  </table>
<% else %>
  <div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">No Orders</h1>

      <p class="col-md-8 fs-4">Run `rails db:seed` to import them.</p>
    </div>
  </div>
<% end %>
