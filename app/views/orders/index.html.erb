<div class="d-flex justify-content-between align-items-center">
  <h1>Orders</h1>

  <%= button_to 'Export', exports_path, class: 'btn btn-sm btn-outline-secondary' %>
</div>

<%= render 'orders/tabs' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Total</th>
      <th>Items</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'orders/order', collection: @orders %>
  </tbody>
</table>
