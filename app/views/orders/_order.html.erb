<tr>
  <th><%= l(order.created_at, format: :long) %></th>
  <th class="text-end"><%= number_to_currency(order.total) %></th>
  <th class="text-center"><%= pluralize(order.order_items.size, 'item') %></th>
  <th class="text-center"><%= order_badge(order) %></th>

  <th>
    <%= link_to 'See details &rarr;'.html_safe, order_path(order), class: 'btn btn-sm btn-outline-primary' %>
  </th>
</tr>
